/* Shared Layout */
.shared-list {
    margin-bottom: 40px;
}

/* Filters */
.shared-list .shared-filter {
    margin-bottom: 30px;
    background-color: #c9bea7;
    padding-bottom: 20px;
}
@media only screen and (max-width: 40em) {
    .shared-list .shared-filter {
        padding-bottom: 10px;
    }
}
.shared-list .shared-filter .title {
    position: relative;
    color: #fff;
    text-align: center;
    font-size: 36px;
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 300;
    line-height: 40px;
    margin-top: 20px;
    margin-bottom: 20px;
    text-transform: uppercase;
}
.shared-list .shared-filter .title:before {
    content : '';
    display: block;
    width: 100%;
    height : 1px;
    background-color: #fff;
    position: absolute;
    top: 50%;
    opacity: 0.5;
}
.shared-list .shared-filter .title > span {
    position: relative;
    background-color: #c9bea7;
    padding-left: 20px;
    padding-right: 20px;
}
.shared-list .shared-filter .amenities-button {
    cursor: pointer;
    height: 40px;
    line-height: 40px;
    background-color: #fff;
    color: #c74d28;
    font-size: 18px;
    padding-left: 15px;
    padding-right: 45px;
    background-image: url(../includes/public/assets/images/listings/fa-plus-circle.png);
    background-position: 100% center;
    background-repeat: no-repeat;
    margin-bottom: 20px;
    transition: background-image .5s
}
.shared-list .shared-filter .amenities-button.open {
    background-image: url(../includes/public/assets/images/listings/fa-minus-circle.png);
}
.desktop-amenities-container {
    display: block;
}
.mobile-amenities-container {
    display: none;
}
@media only screen and (max-width: 40em) {
    .desktop-amenities-container {
        display: none;
    }
    .mobile-amenities-container {
        display: block;
    }
}
.shared-list .shared-filter .amenities {
    display: none;
    background-color: #fff;
    padding: 0 15px;
    margin-bottom: 20px;
}
.shared-list .shared-filter .amenities ul {
    
}
.shared-list .shared-filter .amenities ul li {
    padding-bottom: 0;
}
.shared-list .shared-filter .amenities ul li label {
    color: #c74d28;
    font-size: 18px;
    height: 40px;
    line-height: 40px;
}
.shared-list .shared-filter .amenities ul li label input {
    
}

/* Map */
.shared-list .shared-map [data-gMapContainer] {
    position: relative;
    min-height: 50px;
    margin-bottom: 40px;
}
.shared-list .shared-map [data-mapHolder] {
    display: none;
    height: 440px;
    overflow: hidden;
}
.shared-list .shared-map [data-mapHolder] img.temp {
    width: 100%;
}
.shared-list .shared-map [data-openMap],
.shared-list .shared-map [data-closeMap] {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    max-width: 130px;
    margin: auto;
    background-color: #c74d28;
    color: #fff;
    text-transform: uppercase;
    font-size: 18px;
    line-height: 40px;
    text-align: center;
    padding: 0;
    font-family: Arial, Helvetica, sans-serif;
}
.shared-list .shared-map [data-openMap] .fa,
.shared-list .shared-map [data-closeMap] .fa{
    margin-left: 5px;
}
.shared-list .shared-map [data-openMap] {
    display: block;
}
.shared-list .shared-map [data-closeMap] {
    display: none;
}
.shared-list.map-open .shared-map [data-gMapContainer] {
    
}
.shared-list.map-open .shared-map [data-mapHolder] {
    display: block;
}
.shared-list.map-open .shared-map [data-openMap] {
    display: none;
}
.shared-list.map-open .shared-map [data-closeMap] {
    display: block;
}

/* Sort & Pager */
.shared-sort-pager {
    text-transform: uppercase;
    font-size: 18px;
    margin-bottom: 10px;
}
.shared-sort-pager.bottom {
    padding-top: 10px;
    border-top: 1px solid #e9f0f5;
}
.shared-sort-pager .sort {
    margin-bottom: 20px;
}
.shared-sort-pager .sort .title {
    color: #c9bea7;
    padding-right: 5px;
}
.shared-sort-pager .sort a {
    color: #756b5e;
}
.shared-sort-pager .sort a:after {
    content: '|';
    color: #f28b20;
    padding: 0 7.5px;
    font-weight: normal;
}
.shared-sort-pager .sort a:last-child:after {
    content: none;
}
.shared-sort-pager .sort a.selected {
    font-weight: bold;
}
.shared-sort-pager .pager {
    color: #756b5e;
    text-align: right;
    line-height: 20px;
    margin-bottom: 20px;
}
.shared-sort-pager .pager a {
    display: inline-block;
    vertical-align: middle;
    color: #f28b20;
    font-size: 30px;
    padding: 0 10px;
}
.shared-sort-pager .pager a:first-child {
    padding-left: 0 !important;
}
.shared-sort-pager .pager a:last-child {
    padding-right: 0 !important;
}
@media only screen and (max-width: 48em) {
    .shared-sort-pager.top .pager a {
        padding: 0 5px;
    }
}
@media only screen and (max-width: 40em) {
    .shared-sort-pager.top .pager a {
        padding: 0 10px;
    }
}
.shared-sort-pager .pager a.disabled {
    opacity: 0.5;
    pointer-events: none;
}
.shared-sort-pager .pager a .fa {
    pointer-events: none;
}
.shared-sort-pager .pager span {
    display: inline-block;
    vertical-align: middle;
}
.shared-sort-pager .pager .current {
    font-weight: bold;
    padding-left: 5px;
}
.shared-sort-pager .pager .of {
    padding: 0 5px;
}
.shared-sort-pager .pager .total {
    padding-right: 5px;
}
@media only screen and (max-width: 40em) {
    .shared-sort-pager .sort {
        text-align: center;
    }
    .shared-sort-pager .pager {
        text-align: center;
    }
}

/* Items */
.shared-items {
    
}
.shared-items ul[class*="block-grid-"] > li {
    padding-bottom: 40px;
}
.shared-items ul[class*="block-grid-"] > li.double-wide {
    width: 100%;
    padding-bottom: 60px;
}
@media only screen and (max-width: 40em) {
    .shared-items ul[class*="block-grid-"] > li.double-wide {
        padding-bottom: 40px;
    }
}
.shared-items ul li.empty {
    display: none;
}
.shared-items .item {
    
}
.shared-items .item .image-container {
    position: relative;
    overflow: hidden;
    margin-bottom: 15px;
    display: block;
}
.shared-items .item.dtn .image-container {
    margin-bottom: 0;
}
@media only screen and (max-width: 40em) {
    .shared-items .item .image-container {
        padding-left: 15px;
        padding-right: 15px;
    }
    .shared-items .item.dtn .image-container {
        padding: 0;
        margin-left: -15px;
        margin-right: -15px;
    }
}
.shared-items .item .image-container .featured-tag {
    position: absolute;
    top: 0px;
    right: 0px;
    padding: 0 20px;
    background-color: #f28b20;
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 300;
    font-size: 22px;
    line-height: 32px;
    color: #fff;
    text-transform: uppercase;
    z-index: 1;
}
.shared-items .item .image-container .color-slide {
    
}
.shared-items .item .image-container .color-slide:before,
.shared-items .item .image-container .color-slide:after {
    content: '';
    position: absolute;
    top: 0px;
    left: 100%;
    width: 100%;
    height: 100%;
    opacity: .3;
    background-color: #c74d28;
    transition: all ease .5s;
}
.shared-items .item .image-container .color-slide:after {
    transition: all ease .5s .11s;
}
.shared-items .item .image-container .color-slide:hover:before,
.shared-items .item .image-container .color-slide:hover:after {
    left: 0%;
}
@media only screen and (max-width: 64em) {
    .shared-items .item .image-container .color-slide:before,
    .shared-items .item .image-container .color-slide:after {
        content: none;
    }
}
.shared-items .item .image-container .color-slide img {
    width: 100%;
}
.shared-items .item.dtn .details-container {
    position: absolute;
    top: 50%;
    right: 0;
    padding-right: 15px;
    padding-left: 15px;
    transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    -webkit-transform: translateY(-50%);
}
@media only screen and (max-width: 64em) {
    .shared-items .item.dtn .details-container {
        padding: 0;
        position: static;
        transform: none;
        -ms-transform: none;
        -webkit-transform: none;
    }
}
.shared-items .item .details-container .title {
    color: #c74d28;
    font-size: 36px;
    line-height: 1em;
    padding-left: 45px;
    text-transform: uppercase;
    margin-bottom: 15px;
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 300;
}
@media only screen and (max-width: 40em) {
    .shared-items .item .details-container .title {
        font-size: 32px;
    }
}
.shared-items .item .details-container .title a {
    color: inherit;
    font-family: inherit;
    font-weight: inherit;
}
.shared-items .item .details-container .map-pin {
    width: 34px;
    height: 48px;
    margin-right: 5px;
    margin-left: -45px;
    display: inline-block;
    background-image: url(../includes/public/assets/images/listings/list-pin.png);
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
    top: 12px;
    cursor: pointer;
    transition: all ease .5s;
}
.shared-items .item .details-container .map-pin:hover {
    background-image: url(../includes/public/assets/images/listings/list-pin2.png);
}
@media only screen and (max-width: 64em) {
    .shared-items .item .details-container .map-pin:hover {
        background-image: url(../includes/public/assets/images/listings/list-pin.png);
    }
}
.shared-items .item .details-container .map-pin:after {
    content: 'Map';
    color: #fff;
    font-size: 18px;
    line-height: 1em;
    opacity: 0;
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 300;
    text-align: center;
    position: absolute;
    top: 10px;
    left: 0px;
    width: 100%;
    text-align: center;
    transition: all ease .5s;
}
@media only screen and (max-width: 64em) {
    .shared-items .item .details-container .map-pin:after {
        content: none;
    }
}
.shared-items .item .details-container .map-pin:hover:after {
    opacity: 1;
}
.shared-items .item .details-container .description {
    color: #756b5e;
    font-size: 18px;
    font-weight: 400;
    line-height: 26px;
    position: relative;
}
@media only screen and (max-width: 40em) {
    .shared-items .item .details-container .description {
        font-size: 18px;
        line-height: 26px;
    }
}
.shared-items .item .details-container .description .read-more {
    position: relative;
    color: #c74d28;
    font-weight: bold;
    line-height: 32px;
    padding: 6px 0 3px;    
    transition: all ease .5s;
}
.shared-items .item .details-container .description .read-more:hover { color: #fff; }
@media only screen and (max-width: 64em) {
    .shared-items .item .details-container .description .read-more:hover { color: #c74d28; }
}
.shared-items .item .details-container .description .read-more:before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 120%;
    height: 100%;
    margin-top: 3px;
    opacity: 0;
    background-color: #c74d28;
    transform: translate(-50%,-50%) scale(0);
    -ms-transform: translate(-50%,-50%) scale(0);
    -webkit-transform: translate(-50%,-50%) scale(0);
    transition: all ease .5s;
}
.shared-items .item .details-container .description .read-more:hover:before {
    opacity: 1;
    transform: translate(-50%,-50%) scale(1);
    -ms-transform: translate(-50%,-50%) scale(1);
    -webkit-transform: translate(-50%,-50%) scale(1);
}
@media only screen and (max-width: 64em) {
    .shared-items .item .details-container .description .read-more:before { content: none; }
}
.shared-items .item .details-container .description .read-more > span {
    position: relative;
    z-index: 1;
}
.shared-items .item .details-container .description .read-more span:after {
    content: '';
    width: 7px;
    height: 12px;
    margin-top: 2px;
    margin-bottom: -1px;
    margin-left: 3px;
    display: inline-block;
    background-image: url(../includes/public/assets/images/listings/listing-arrow.png);
    background-position: center;
    background-repeat: no-repeat;
    transition: all ease .5s;
}
.shared-items .item .details-container .description .read-more:hover span:after {
    background-image: url(../includes/public/assets/images/listings/listing-arrow2.png);
}
@media only screen and (max-width: 64em) {
    .shared-items .item .details-container .description .read-more:hover span:after {
        background-image: url(../includes/public/assets/images/listings/listing-arrow.png);
    }
}